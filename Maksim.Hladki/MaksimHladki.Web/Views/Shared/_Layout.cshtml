<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Depots", "Index", "Depot")</li>
                    <li>@Html.ActionLink("Assign DrugUnit to Depot", "AssignToDepot", "DrugUnit")</li>
                    <li>@Html.ActionLink("Calculate DrugUnit", "CalculateDrugUnit", "Depot")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">

        @if (TempData["messageOk"] != null)
        {
            <div class="alert alert-success">
                @TempData["messageOk"]
            </div>
        }

        @if (TempData["messageError"] != null)
        {
            <div class="alert alert-danger">
                @TempData["messageError"]
            </div>
        }


        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Maksim Hladki</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", false)
</body>
</html>